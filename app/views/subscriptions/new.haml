%h1 Account
.row
  .col-12
    = render 'accounts/navigation'
%h3.mt-3.mb-3 Subscribe
.row.justify-content-md-center
  .col-md-5
    %p
      = "Your #{current_account.plan_name} trial ends in #{distance_of_time_in_words(Time.current, current_account.current_period_end)}. Subscribe now and billing will begin then. Yay no interruptions!"
    %p
      = render 'card_form', locals: { path: subscriptions_path, method: 'patch' }
